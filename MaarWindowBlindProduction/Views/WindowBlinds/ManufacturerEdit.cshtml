@model MaarWindowBlindProduction.Models.WindowBlind

@{
    ViewData["Title"] = "ManufacturerEdit";
}

<h1>ManufacturerEdit</h1>

<h4>WindowBlind</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ManufacturerEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="PatternNumber" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ClothReady" /> @Html.DisplayNameFor(model => model.ClothReady)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FrameReady" /> @Html.DisplayNameFor(model => model.FrameReady)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProductPackaged" /> @Html.DisplayNameFor(model => model.ProductPackaged)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DeliveryStatus" /> @Html.DisplayNameFor(model => model.DeliveryStatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

