@model MaarWindowBlindProduction.Models.Order

@{
    ViewData["Title"] = "DelivererEdit";
}

<h1>Window blind has been delivered?</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DelivererEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <input class="form-check-input" asp-for="ClothReady" type="hidden" disabled />
            <input class="form-check-input" asp-for="FrameReady" type="hidden" disabled />
            <input class="form-check-input" asp-for="ProductPackaged" type="hidden" disabled/> 
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DeliveryStatus" /> @Html.DisplayNameFor(model => model.DeliveryStatus)
                </label>
            </div>
            <input type="submit" value="Save" class="btn btn-primary mt-3 mb-3" />
        </form>
    </div>
</div>

<div>
    <a asp-action="WorkerList">Back to List</a>
</div>

